<script type="text/javascript">
$(function(){
	/* ===================================echarts 차트==================================== */
	// 차트를 표시할 요소를 선택합니다.
    var chartContainer = $('.secondLine1')[0]; 

	var chart = echarts.init(chartContainer);
	
	var option;
	option = {
	    tooltip: {
	        trigger: 'item'
	    },
	    legend: {
	        top: '5%',
	        left: 'center',
	        selectedMode: false
	    },
	    series: [
	        {
	            name: 'Access From',
	            type: 'pie',
	            radius: ['40%', '70%'],
	            center: ['50%', '70%'],
	            startAngle: 180,
	            label: {
	                show: true,
	                formatter: function(param) {
	                    return param.name + ' (' + (param.percent * 2) + '%)';
	                }
	            },
	            data: [
	                { value: 1048, name: '재원' },
	                { value: 300, name: 'else' },
	                {
	                    value: 1048 + 300,
	                    itemStyle: {
	                        color: 'none',
	                        decal: {
	                            symbol: 'none'
	                        }
	                    },
	                    label: {
	                        show: false
	                    }
	                }
	            ]
	        }
	    ]
	};
	
	chart.setOption(option);	
	/* ===================================echarts 차트==================================== */
	
	/* ===================================첫번째 차트==================================== */
    var chart1 = $('#chart1');
    
    var myChart = new Chart(chart1, {
        type: 'doughnut',
        data: {
            labels: ['남성', '여성'],
            datasets: [{
                label: '# of Votes',
                data: [4180, 4888],
                backgroundColor: ['#00a9ff', '#ff5676'],
                borderWidth: 1
            }]
        },
        options: {
            plugins: {
                legend: {
                    reverse: true
                },
                tooltips: {
                    callbacks: {
                        label: function(context) {
                            var label = context.label || '';
                            var value = context.parsed || 0;
                            var total = context.dataset.data.reduce(function(acc, current) {
                                return acc + current;
                            });
                            var percentage = ((value / total) * 100).toFixed(2) + '%';
                            return label + ': ' + percentage + ' testText';
                        }
                    }
                }
            }
        }
    });
	/* ===================================첫번째 차트==================================== */
    
	/* ===================================두번째 차트==================================== */
    var chart2 = $('#chart2');
    
    var myChart = new Chart(chart2, {
        type: 'bar',
        data: {
        	labels: ['10대', '20대', '30대', '40대', '50대', '60대', '70대 이상'],
            datasets: [{
                label: '방문 ',
                data: [18, 28, 38, 10, 50, 128, 20],
                backgroundColor: ['#d76640', '#f9697f', '#1a92ab', '#f7d073', '#ffc1aa', '#808bb8', '#ffbf16'],
                borderWidth: 1
            }]
        },
        options: {
            plugins: {
                legend: {
                    reverse: true
                }
            }
        }
    });
	/* ===================================두번째 차트==================================== */
});
</script>

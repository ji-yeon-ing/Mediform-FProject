            $("#patntHlthinsAtDt").val(res.patntHlthinsAt == "Y" ? "O" : "X");
            $("#prtctorNmDt").val(res.prtctorNm);
            $("#prtctorTelnoDt").val(res.prtctorTelno);
            $("#patntHeightDt").val(res.patntHeight + "cm");

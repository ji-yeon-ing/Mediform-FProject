<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.mapper.common.AlarmMapper">

	<select id="selectAlarm">
		select count(*)
		from alarm
		where emp_no = #{empNo} and ALARM_CNFIRM = 'N'
	
	</select>
	
	
	<select id="selectAlarmList" resultType="alarmVO">
		select ALARM_NO, a.EMP_NO, ALARM_WRITER, ALARM_CN, ALARM_DTTM, ALARM_CNFIRM, ALARM_DELETE, ALARM_CNT
	</select>

	<select id="selectEmpList" resultType="employeeVO">
		select EMP_NO, EMP_PW, EMP_NM, EMP_RRNO1, EMP_RRNO2, EMP_TELNO, EMP_ZIP, EMP_ADRES1, EMP_ADRES2, EMP_EMAIL, EMP_SEXDSTN, EMP_BRTHDY, EMP_DEP, EMP_ENCPN, EMP_RETIRE, EMP_EXP, EMP_RGSDE, EMP_UPDDE, EMP_HFFC_AT, EMP_PROFILE, EMP_SIGN, EMP_SE, EMP_AUTHOR, EMP_CLSF, EMP_YRYC_USE, EMP_YRYC_REMNDR, EMP_OFFHOD_USE, EMP_OFFHOD_REMNDR, EMP_CONFM, RJCT_RESN, EMP_RQSTR, EMP_LCNS, EMP_DOCTR_LCNS, EMP_LCNS_NO, EMP_DOCTR_LCNS_NO, EMP_SICKNS_USE, EMP_SICKNS_REMNDR
		from EMPLOYEE
	</select>


</mapper>